<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :login do |f| %>
    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %><br>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div>
      <%= f.submit "Login", class: "btn btn-default" %>
    </div>
    <% end %>
  </div>
</div>
