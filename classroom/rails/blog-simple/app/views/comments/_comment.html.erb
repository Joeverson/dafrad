<div class="comment" id="comment-<%= comment.id %>">
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <% if current_user %>
    <p>
      <%= link_to "destroy",
            article_comment_path(comment.article, comment),
            method: :delete,
            remote: true,
            data: { confirm: 'Are you sure?' } %>
    </p>
  <% end %>
</div>
